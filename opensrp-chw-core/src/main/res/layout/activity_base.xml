<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/nav_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#2c2c2c"
        android:fitsSystemWindows="true"
        app:itemBackground="@drawable/drawer_item_background"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:theme="@style/NavigationDrawerStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false">

            <RelativeLayout
                android:id="@+id/rlLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/nav_logo"
                    android:src="@drawable/ic_logo"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="15dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#959595"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:id="@+id/vDiv1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/rlLogo"
                android:background="#000000" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rlSync"
                android:layout_below="@+id/vDiv1">

                <RelativeLayout
                    android:id="@+id/rlMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvRegisters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="15dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/nav_registers"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvRegisters"
                        android:layout_margin="15dp" />

                    <View
                        android:id="@+id/vDiv2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/rvOptions"
                        android:background="#000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vDiv2"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rlIconLang"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp">

                            <ImageView
                                android:id="@+id/ivIconLang"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_nav_language" />

                            <TextView
                                android:id="@+id/tvLang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toEndOf="@+id/ivIconLang"
                                android:layout_toRightOf="@+id/ivIconLang"
                                android:fontFamily="sans-serif"
                                android:text="English"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlIconDevice"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp">

                            <ImageView
                                android:id="@+id/ivIconDevice"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_nav_device_share" />

                            <TextView
                                android:id="@+id/tvDeviceToDevice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toEndOf="@+id/ivIconDevice"
                                android:layout_toRightOf="@+id/ivIconDevice"
                                android:fontFamily="sans-serif"
                                android:text="@string/device_to_device"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlLogout"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp">
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/covid19_view"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/covid19"
                                    android:layout_below="@+id/tvSyncTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="sans-serif"
                                    android:text="করোনা ভাইরাস সংক্রান্ত জরিপ"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/covid19_details"
                                    android:layout_below="@+id/tvSyncTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="sans-serif"
                                    android:text="COVID-19 Details"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/ivLogout"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_below="@+id/covid19_view"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_nav_logout" />

                            <TextView
                                android:id="@+id/tvLogout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_below="@+id/covid19_view"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toEndOf="@+id/ivLogout"
                                android:layout_toRightOf="@+id/ivLogout"
                                android:fontFamily="sans-serif"
                                android:text="@string/log_out_as"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tvappversion"
                            android:layout_below="@+id/covid19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="sans-serif"
                            android:text="@string/app_version"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                        <RelativeLayout
                            android:id="@+id/dashboard_view"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp">

                            <ImageView
                                android:id="@+id/dashboard_img"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:scaleType="centerInside"
                                android:src="@android:drawable/gallery_thumb" />

                            <TextView
                                android:id="@+id/dashboard_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toEndOf="@+id/dashboard_img"
                                android:layout_toRightOf="@+id/dashboard_img"
                                android:fontFamily="sans-serif"
                                android:text="ড্যাশবোর্ড"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/force_sync"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp">

                            <ImageView
                                android:id="@+id/ivForceSync"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_icon_settings" />

                            <TextView
                                android:id="@+id/tvForceSync"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toEndOf="@+id/ivForceSync"
                                android:layout_toRightOf="@+id/ivForceSync"
                                android:fontFamily="sans-serif"
                                android:text="ট্রাবলশুট"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/ss_info_browse"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp">

                            <ImageView
                                android:id="@+id/ivssinfo"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:scaleType="centerInside"
                                android:src="@android:drawable/ic_menu_more" />

                            <TextView
                                android:id="@+id/tvSSinfoBrowse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toEndOf="@+id/ivssinfo"
                                android:layout_toRightOf="@+id/ivssinfo"
                                android:fontFamily="sans-serif"
                                android:text="SS তথ্য"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/notification_view"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp">

                            <ImageView
                                android:id="@+id/notification_img"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:scaleType="centerInside"
                                android:src="@android:drawable/stat_notify_chat" />

                            <TextView
                                android:id="@+id/notification_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toEndOf="@+id/notification_img"
                                android:layout_toRightOf="@+id/notification_img"
                                android:fontFamily="sans-serif"
                                android:text="নোটিফিকেশন"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/migration_view"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp">

                            <ImageView
                                android:id="@+id/migration_img"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:scaleType="centerInside"
                                android:src="@android:drawable/ic_notification_overlay" />

                            <TextView
                                android:id="@+id/migration_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toEndOf="@+id/migration_img"
                                android:layout_toRightOf="@+id/migration_img"
                                android:fontFamily="sans-serif"
                                android:text="স্থানান্তর"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/payment_view"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp">

                            <ImageView
                                android:id="@+id/payment_img"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:scaleType="centerInside"
                                android:src="@android:drawable/ic_notification_overlay" />

                            <TextView
                                android:id="@+id/payment_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_toEndOf="@+id/payment_img"
                                android:layout_toRightOf="@+id/payment_img"
                                android:fontFamily="sans-serif"
                                android:text="পেমেন্ট"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

            <RelativeLayout
                android:id="@+id/rlSync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#3d3d3d"
                android:paddingStart="@dimen/sync_time_padding"
                android:paddingLeft="@dimen/sync_time_padding"
                android:paddingTop="@dimen/sync_time_padding"
                android:paddingEnd="@dimen/sync_time_padding_right"
                android:paddingRight="@dimen/sync_time_padding_right"
                android:paddingBottom="@dimen/sync_time_padding">

                <RelativeLayout
                    android:id="@+id/rlIconSync"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivSyncIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:clickable="true"
                        android:contentDescription="@string/nav_sync"
                        android:focusable="true"
                        app:srcCompat="@mipmap/sidemenu_sync" />

                    <ProgressBar
                        android:id="@+id/pbSync"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:indeterminate="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvSync"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/rlIconSync"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="@string/nav_sync"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tvUnsyncCount"
                    android:layout_width="40sp"
                    android:background="@drawable/circle_btn"
                    android:layout_toRightOf="@+id/tvSync"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/alert_urgent_red"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvSyncTimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tvSyncTime"
                    android:fontFamily="sans-serif"
                    android:text="@string/nav_last"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSyncTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/nav_last_sync_time"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSyncTimeStamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
