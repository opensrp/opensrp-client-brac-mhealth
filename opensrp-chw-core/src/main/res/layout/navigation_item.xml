<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical"
    android:paddingBottom="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/expandBtn"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_more"
            android:tint="@color/white"
            android:layout_marginRight="10dp"
            android:layout_width="33dp"
            android:layout_height="33dp"/>

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/expandBtn"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/child_boy_infant" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/ivIcon"
            android:layout_toRightOf="@+id/tvCount"
            android:fontFamily="sans-serif"
            android:text="@string/all_registers"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textSize="20sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sub_item_panel"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/stvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_toRightOf="@+id/stvCount"
            android:fontFamily="sans-serif"
            android:text="@string/all_registers"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>