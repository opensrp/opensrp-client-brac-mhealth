<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cross_btn"
        android:src="@drawable/ic_cross"
        android:layout_gravity="right"
        android:tint="@color/customAppThemeBlue"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="নিচের কোন কারণে সদস্যকে যাচাই করা যায় নি?"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <CheckBox
        android:id="@+id/check_box_1"
        android:text=" রেজিস্ট্রেশন এ ভুল আঙুলের ছাপ দেওয়া হয়েছে "
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/check_box_2"
        android:text=" খুঁজে বের করতে ভুল আঙুলের ছাপ দেওয়া হয়েছে"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/check_box_5"
        android:text="জানা নেই"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* ভুল হয়ে থাকলে আরেকবার চেষ্টা করুন"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/retry_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button_bg"
            android:ems="10"
            android:shadowColor="#ffffff"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:textStyle="bold"
            android:text="আরেকবার চেষ্টা করি "
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <Button
            android:id="@+id/service_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/red_round"
            android:ems="10"
            android:shadowColor="#ffffff"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:textStyle="bold"
            android:text="অমিল অবস্থায় সেবা দেই"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>