<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="450dp"
    android:layout_height="600dp"
    android:fillViewport="true"
    android:background="@color/tika_card_yellow_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tika_card_bg"
            android:gravity="center|left"
            android:padding="10dp"
            android:text="@string/vaccination_right"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum = "10"
            android:layout_marginTop="20dp"
            >
            <!-- row one-->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:background="@drawable/table_bg"
                android:gravity="center|left"
                app:layout_constraintWidth_percent="0.7"
                android:text="@string/vaccine_msg"
                />


            <!--row two-->

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/table_bg"
                android:fontFamily="@font/tonnymj"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="@string/vaccine_receive_date"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum = "10"
            >
            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@drawable/table_bg"
                android:gravity="center|left"
                android:fontFamily="@font/tonnymj"
                android:padding="10dp"
                android:text="@string/bcg_vaccine_date" />

            <TextView
                android:id="@+id/atBirthTikaGettingDate"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:background="@drawable/table_bg"
                android:fontFamily="@font/tonnymj"
                android:gravity="center|left"
                android:padding="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum = "10"
            >
            <!--row three-->

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center|left"
                android:background="@drawable/table_bg"
                android:fontFamily="@font/tonnymj"
                android:padding="10dp"
                android:text="@string/vaccine_2"
           />

            <TextView
                android:id="@+id/sixWeekDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:background="@drawable/table_bg"
                android:fontFamily="@font/tonnymj"
                android:gravity="center|left"
                android:padding="10dp"
                 />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum = "10">


            <!--row four-->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@drawable/table_bg"
                android:fontFamily="@font/tonnymj"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="@string/vaccine_3"
                 />

            <TextView
                android:id="@+id/tenWeekDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/table_bg"
                android:gravity="center|left"
                android:fontFamily="@font/tonnymj"
                android:padding="10dp"
                android:text=""
                android:textStyle="bold"
                />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum = "10">
            <!--row five-->
            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@drawable/table_bg"
                android:gravity="center|left"
                android:fontFamily="@font/tonnymj"
                android:padding="10dp"
                android:text="@string/vaccine_4"
               />

            <TextView
                android:id="@+id/fourteenWeekDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/table_bg"
                android:fontFamily="@font/tonnymj"
                android:gravity="center|left"
                android:padding="10dp"
                android:textStyle="bold"
                android:text=""
             />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum = "10">
            <!--row six-->
            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:fontFamily="@font/tonnymj"
                android:background="@drawable/table_bg"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="@string/vaccine_5"
              />

            <TextView
                android:id="@+id/nineMonthDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/table_bg"
                android:gravity="center|left"
                android:padding="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/tonnymj"
  />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum = "10">

            <TextView
                android:id="@+id/eighteenMonth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:fontFamily="@font/tonnymj"
                android:background="@drawable/table_bg"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="@string/vaccine_6"
             />

            <TextView
                android:id="@+id/eighteenMonthDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="@font/tonnymj"
                android:background="@drawable/table_bg"
                android:gravity="center|left"
                android:padding="10dp"
                android:textStyle="bold" />
        </LinearLayout>





        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tonnymj"
            android:gravity="center|left"
            android:padding="10dp"
            android:text="@string/vaccine_date_write_msg"
            app:layout_constraintEnd_toEndOf="@+id/nineMonthDate"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/eighteenMonth" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tika_card_bg"
            android:gravity="center|left"
            android:fontFamily="@font/tonnymj"
            android:padding="10dp"
            android:text="@string/vaccine_card_msg"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

    </LinearLayout>

</ScrollView>