<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"


        app:cardCornerRadius="5dp"
        android:elevation="2dp">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/checked_image"
                android:src="@drawable/ic_unchecked_f"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/hh_profile_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checked_image"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/register_list_item_margin"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/client_profile_pic_height"
                android:maxWidth="@dimen/client_profile_pic_width"
                android:paddingBottom="@dimen/register_list_top_bottom_min_padding"
                android:paddingStart="@dimen/register_list_top_bottom_min_padding"
                android:scaleType="centerCrop"
                android:src="@drawable/rowavatar_member" />
            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/name_tv"
                android:text="sdfasdfasdfasd"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/hh_profile_img"
                android:layout_toLeftOf="@+id/age_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/id_tv"
                android:layout_below="@+id/name_tv"

                android:text="sdfasdfasdfasd"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/hh_profile_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/age_tv"
                android:text="12 year"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>