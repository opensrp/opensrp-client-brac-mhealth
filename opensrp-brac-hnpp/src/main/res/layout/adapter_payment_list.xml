<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/payment_package"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="IYCF"
            android:textColor="@color/light_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payment_unit_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="150"
            android:textColor="@color/light_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payment_qty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/light_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

            <Button
                android:id="@+id/decrease_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/light_navy"
                android:layout_weight=".50"
                android:textColor="@color/white"
                android:text="-"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/integer_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".50"
                android:gravity="center"
                android:textColor="@color/light_blue"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/increase_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".50"
                android:gravity="center"
                android:background="@color/light_navy"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/payment_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="600 Taka"
            android:textColor="@color/light_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>