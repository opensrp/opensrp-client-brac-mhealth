<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:background="@color/primary"
    android:layout_height="60dp">
    <LinearLayout
        android:id="@+id/ss_name_view"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/ss_name_bangla"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/ss_filter_spinner"
            android:layout_marginBottom="20dp"
            android:layout_width="150dp"
            android:background="@drawable/spinner_resource"
            android:layout_margin="5dp"
            android:layout_height="50dp">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/month_view"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ss_name_view"
        android:layout_toLeftOf="@+id/filterBtn"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/month_bangla"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/monthDatePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/spinner_resource"
            android:orientation="horizontal">
            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/month_text"
                android:text="সেপ্টেম্বর"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/year_text"
                android:text="২০১৭"
                android:layout_marginLeft="5dp"
                android:gravity="start"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/date_view"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@+id/month_view"
        android:layout_toLeftOf="@+id/filterBtn"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/date_bangla"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:drawableRight="@drawable/ic_calender"
            android:background="@drawable/login_button_bg"
            android:id="@+id/date_btn"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/filterBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:tint="@color/white"
        android:src="@drawable/ic_icon_filter"/>


</RelativeLayout>