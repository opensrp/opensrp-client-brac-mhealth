<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bg"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/customAppThemeBlue">
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/textview_detail_two"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:text="@string/menu_stock_details"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/cross_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_cross"
            android:tint="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/monthDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stock_details_background"
        android:padding="10dp"
        android:orientation="horizontal">
        <org.smartregister.view.customcontrols.CustomFontTextView

            android:layout_weight="2"
            android:id="@+id/month_text"
            android:text="সেপ্টেম্বর"
           android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:layout_weight="2"
            android:id="@+id/year_text"
            android:text="২০১৭"
            android:gravity="start"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_arrow_forward_ios"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/title_text"
        android:text="প্রসব পরবর্তী প্যাকেজ"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/stock_details_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/stock_details_background"
        android:orientation="horizontal">
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:layout_weight="3"
            android:text="মাস শুরুর ব্যালেন্স"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:layout_weight="1"
            android:id="@+id/month_start_blnc_text"
            android:text="0"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/stock_details_background"
        android:orientation="horizontal">
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:layout_weight="3"
            android:text="নতুন প্যাকেজ"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:layout_weight="1"
            android:id="@+id/new_pkg_text"
            android:text="0"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/stock_details_background"
        android:orientation="horizontal">
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:layout_weight="3"
            android:text="বিক্রয়"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:layout_weight="1"
            android:id="@+id/sell_text"
            android:text="0"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/stock_details_background"
        android:orientation="horizontal">
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:layout_weight="3"
            android:text="শেষ ব্যালেন্স"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:layout_weight="1"
            android:id="@+id/end_blnc_text"
            android:text="0"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>