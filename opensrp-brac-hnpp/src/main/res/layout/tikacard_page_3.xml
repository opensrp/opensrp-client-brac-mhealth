<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/tika_card_yellow_bg"
    android:layout_width="450dp"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/tika_card_bg"
                android:text="ইপিআই কর্মসুচিতে শিশুদের টিকা দিয়ে প্রতিরোধযোগ্য রোগ সমূহ"
                android:layout_width="match_parent"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@color/tika_card_bg"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="১। যক্ষা"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="২। পোলিও"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="৩। ডিফথেরিয়া"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:background="@color/tika_card_bg"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="৪। হুপিং কাশি"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="৫। ধনুষ্টাংকর"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="৬। হেপাটাইতিস-বি"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@color/tika_card_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="৭। হিমোফাইলাস ইনফ্লুয়েঞ্জা-বি জনিত রোগ"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="৮। হাম"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@color/tika_card_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="৯। নিউমোকক্কাল জনিত নিউমোনিয়া"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/tonnymj"
                    android:padding="10dp"
                    android:text="১০। রুবেলা"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView
                android:text="১। সময়সূচি অনুযায়ী সবগুলো টিকা নিলে আপনার শিশু উপরে বর্ণিত মারাত্মক সংক্রামক
রোগসমূহ হতে রক্ষা পাবে"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="২। সময়সূচি অনুযায়ী টিকা না নিলে আপনার শিশুর মারাত্মক ও সংক্রামক রোগসমূহের
বিরুদ্ধে রোগ প্রতিরোধ ক্ষমতা তৈরি নাও হতে পারে।"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="৩। বিসিজি টিকার নির্দিষ্ট ডোজটি জন্মের পর পরই দেয়া যায় । টিকা দেয়ার পর বিসিজি
টিকার স্থানে (বাম বাহুতে) স্বাভাবিকভাবে ঘা হবে এতে ভযরে কিছু নাই ।"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="৪। শিশুকে আইপিভি টিকার দুই ডোজ টিকা; ১ম ডোজ ৬ সপ্তাহ/৪২ দিন হলে, হয়
ডোজ ১৪ সপ্তাহ বয়সে দিতে হবে।"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="৫। শিশুর বয়স ৬ সপ্তাহ/৪২ দিন হলেই পেন্টাভ্যালেন্ট (ডিপিটি, হেপাটাইটিস-বি, হিব),
ওপিভি এবং পিসিভি টিকার ১ম ডোজ দিতে হবে । তারপর কমপক্ষে ৪ সপ্তাহ/২৮
দিনের ব্যবধানে এ সকল টিকার হয় এবং ৩য় ডোজ দিতে হবে।"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="৬। ১০ মাসে পড়লেই/২৭০ দিন পূর্ণ হলেই শিশুকে ১ম ডোজ এবং ১৫ মাস বয়স পূর্ণ
হলেই এমআর (হাম ও রুবেলা) টিকা দিতে হবে।"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="৭। অসুস্থ শিশুকে সাময়িকভাবে টিকা দেয়া যাবে না। তবে শিশু সুস্থ হওয়ার সাথে সাথে
টিকা দিতে হবে এবং সময়সুচি অনুযায়ী সকল টিকা নেয়া শেষ করতে হবে।"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="৮ । টিকা দিলে সামান্য জ্বর, টিকার স্থানে ব্যথা এবং সাময়িকভাবে টিকা দেয়ার স্থান শক্ত
হয়ে যেতে পারে, এতে ভয়ের কিছু নাই ।"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:fontFamily="@font/tonnymj"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>