<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_columns"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/hh_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/register_list_item_margin"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/client_profile_pic_height"
        android:maxWidth="@dimen/client_profile_pic_width"
        android:paddingBottom="@dimen/register_list_top_bottom_min_padding"
        android:paddingStart="@dimen/register_list_top_bottom_min_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/rowavatar_member" />
    <LinearLayout
        android:id="@+id/patient_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/hh_profile_img"
        android:layout_toLeftOf="@+id/member_icon_layout"
        android:layout_marginBottom="@dimen/register_list_top_bottom_margin"
        android:layout_marginEnd="@dimen/register_list_item_margin"
        android:layout_marginLeft="@dimen/register_list_item_margin"
        android:layout_marginRight="@dimen/register_list_item_margin"
        android:layout_marginStart="@dimen/register_list_item_margin"
        android:layout_marginTop="@dimen/register_list_top_bottom_margin"
        android:orientation="vertical">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/house_hold_name"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:text="House hold name"
            android:textColor="@color/black"
            android:textSize="@dimen/register_list_desc_size"
            android:visibility="gone"
            android:textStyle="bold" />
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/house_hold_id"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:singleLine="true"
            android:text="Patient Name"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textSize="@dimen/register_list_title_size" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/house_hold_mobile_number"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:text="45325345"
            android:textColor="@color/black"
            android:textSize="@dimen/register_list_desc_size"
            android:visibility="gone"
             />
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/house_hold_member_count"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:textColor="@color/light_grey_text"
            android:textSize="@dimen/register_list_desc_size"
            android:visibility="gone"
            />
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/registered_member_count"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/register_list_desc_size"
            android:visibility="gone"
            />
        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/next_visit_date"
            android:visibility="gone"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:textColor="@color/light_grey_text"
            android:textSize="@dimen/register_list_desc_size"
            />

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_member_btn"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:src="@drawable/add_member"
        android:layout_width="@dimen/member_profile_pic_width"
        android:layout_height="@dimen/member_profile_pic_width" />
    <LinearLayout
        android:id="@+id/member_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/register_list_member_icon_margin"
        android:layout_marginRight="@dimen/register_list_member_icon_margin"
        android:layout_toLeftOf="@+id/due_button_wrapper"
        android:layout_toStartOf="@+id/due_button_wrapper"
        android:orientation="vertical"
        android:layout_alignWithParentIfMissing="true"
        android:paddingBottom="@dimen/register_list_top_bottom_padding">
        <LinearLayout
            android:id="@+id/male_View"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/male_member_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical" />
            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/male_count_tv"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/light_grey_text"
                android:textSize="@dimen/register_list_desc_size"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/female_view"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/female_member_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical" />
            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/female_count_tv"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/light_grey_text"
                android:textSize="@dimen/register_list_desc_size"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/anc_view"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/women_member_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical" />
            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/women_count_tv"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/light_grey_text"
                android:textSize="@dimen/register_list_desc_size"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/due_button_wrapper"
        android:layout_width="@dimen/register_list_item_width"
        android:layout_height="@dimen/register_list_item_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:background="@drawable/grey_left_border"
        android:paddingBottom="@dimen/register_list_top_bottom_padding"
        android:paddingEnd="@dimen/register_list_item_padding"
        android:paddingLeft="@dimen/register_list_item_padding"
        android:paddingRight="@dimen/register_list_item_padding"
        android:paddingStart="@dimen/register_list_item_padding"
        android:paddingTop="@dimen/register_list_top_bottom_padding">

        <Button
            android:id="@+id/due_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/green_status"
            android:elevation="@dimen/register_list_elevation"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:stateListAnimator="@drawable/button"
            android:text="Home Visit"
            android:textAllCaps="false"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/register_list_due_size"
            android:textStyle="bold"
            android:typeface="normal" />

    </LinearLayout>

</RelativeLayout>