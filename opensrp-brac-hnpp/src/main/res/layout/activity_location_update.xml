<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BkashActivity">
  <RelativeLayout
      android:id="@+id/action_bar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/customAppThemeBlue"
      tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:tint="@color/white"
        android:contentDescription="TODO" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/textview_detail_two"
        style="@style/CustomFontTextViewStyle.ClientList.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="0dp"
        android:text="Update Location"
        android:textColor="@color/white"
        android:textSize="20sp" />
  </RelativeLayout>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      android:layout_below="@+id/action_bar"
      tools:ignore="UselessParent">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
        android:id="@+id/pourashova_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Select Pourashova"
          android:textColor="#272727"
          android:textStyle="bold"
          android:typeface="sans" />
      <android.support.v7.widget.RecyclerView
          android:id="@+id/pourashova_rv"
          android:layout_below="@+id/topbar"
          app:layoutManager="android.support.v7.widget.LinearLayoutManager"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="10dp"
          android:scrollbars="vertical"
          android:visibility="visible" />
    </LinearLayout>
      <LinearLayout
          android:id="@+id/union_ll"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Union"
            android:textColor="#272727"
            android:textStyle="bold"
            android:typeface="sans" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/union_rv"
            android:layout_below="@+id/topbar"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:visibility="visible" />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/oldward_ll"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Old Ward"
            android:textColor="#272727"
            android:textStyle="bold"
            android:typeface="sans" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/old_ward_rv"
            android:layout_below="@+id/topbar"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:visibility="visible" />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/ward_ll"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Ward"
            android:textColor="#272727"
            android:textStyle="bold"
            android:typeface="sans" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/ward_rv"
            android:layout_below="@+id/topbar"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:visibility="visible" />
      </LinearLayout>
      <Button
          android:id="@+id/update_btn"
          android:layout_margin="10dp"
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:background="@drawable/rounded_blue_btn"
          android:text="Update Location"
          android:layout_gravity="center"
          android:paddingLeft="10dp"
          android:paddingEnd="10dp"
          android:textColor="@color/white"
          android:textSize="18sp"
          android:textStyle="bold" />
    </LinearLayout>
  </ScrollView>
  <ProgressBar
      android:id="@+id/progressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:visibility="gone" />
  </RelativeLayout>