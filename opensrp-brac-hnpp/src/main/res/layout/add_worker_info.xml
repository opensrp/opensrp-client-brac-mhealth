                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/supervisor_2_deg_spinner"
                        android:minWidth="200dp"

                        android:entries="@array/designation_array"
                        android:layout_width="wrap_content"
                        android:background="@drawable/spinner_resource"
                        android:layout_margin="5dp"
                        android:layout_height="50dp">
                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/mobile_no"
                        android:padding="10dp"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/supervisor_2_mobile"
                        android:maxLength="11"
                        android:layout_gravity="bottom"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="20sp"
                        android:background="@drawable/edit_text_bg"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/submit_btn"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:background="@drawable/round_btn_selected"
                android:layout_width="150dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>