<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/collapsing_toolbar_appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/customAppThemeBlue">

            <android.support.v7.widget.Toolbar
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetRight="0dp"
                android:theme="@style/FamilyTheme.DarkAppBarOverlay"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/toolbar_title"
                    style="@style/CustomFontTextViewStyle.ClientList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:text="@string/return_to_family_profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/register_member_title_size" />

            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:id="@+id/family_two_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetRight="0dp"
                android:theme="@style/FamilyTheme.AppBarOverlay"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/image_panel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageview_profile"
                            android:layout_width="@dimen/client_profile_pic_width"
                            android:layout_height="@dimen/client_profile_pic_height"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/rowavatar_member"
                            app:civ_border_color="#FFFFFFFF"
                            app:civ_border_width="2dp" />

                        <ImageView
                            android:id="@+id/is_risk"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="15dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/is_risk_icon"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/update_profile_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_below="@+id/imageview_profile"
                            android:background="@drawable/button_cliick"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/profile_update" />

                        <Button
                            android:id="@+id/member_visit_btn"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/update_profile_btn"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/green_click_button"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:visibility="gone"
                            android:text="খানা সদস্য জরিপ"
                            android:textColor="@color/white" />


                    </RelativeLayout>



                    <LinearLayout
                        android:id="@+id/profile_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_panel"
                        android:orientation="vertical"
                        android:foregroundGravity="center"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="1.5">


                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/textview_parent_name"
                            style="@style/CustomFontTextViewStyle.ClientList.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="0dp"
                            android:text="Charity Otala"
                            android:textColor="@color/white"
                            android:textSize="@dimen/activity_title_size"
                            android:textStyle="bold" />

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/textview_id"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0dp"
                            android:paddingRight="5dp"
                            android:text="ID: 25398735"
                            android:textColor="@color/white"
                            android:textSize="@dimen/activity_title_size" />

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/textview_gender"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="0dp"
                            android:text="Male"
                            android:textColor="@color/white"
                            android:textSize="@dimen/px_16_to_sp" />

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/textview_address"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/text_view_second_dot"
                            android:layout_toRightOf="@+id/text_view_first_dot"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:paddingLeft="0dp"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/px_16_to_sp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true">

                            <org.smartregister.view.customcontrols.CustomFontTextView
                                android:id="@+id/textview_name_age"
                                style="@style/CustomFontTextViewStyle.ClientList.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:gravity="center_horizontal"
                                android:paddingLeft="0dp"
                                android:text="Age"

                                android:textColor="@color/white"
                                android:textSize="@dimen/px_16_to_sp" />

                            <ImageView
                                android:id="@+id/missed_schedule_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_below="@+id/textview_name_age"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/danger_vaccine"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/aefi_child_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_below="@+id/textview_name_age"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="25dp"
                                android:layout_toRightOf="@+id/missed_schedule_img"
                                android:adjustViewBounds="true"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/aefi_icon"
                                android:visibility="gone" />

                            <org.smartregister.view.customcontrols.CustomFontTextView
                                android:id="@+id/textview_edit_btn"
                                style="@style/CustomFontTextViewStyle.ClientList.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/textview_name_age"
                                android:drawableRight="@drawable/ic_edit_white"
                                android:drawablePadding="5dp"
                                android:gravity="center_horizontal"
                                android:paddingLeft="0dp"
                                android:text="Edit"
                                android:textColor="@color/white"
                                android:visibility="gone" />

                        </RelativeLayout>


                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/family_head"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0dp"
                            android:paddingTop="@dimen/register_list_top_bottom_min_padding"
                            android:text="@string/family_head"
                            android:textAllCaps="true"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/register_list_desc_size"
                            android:visibility="gone" />

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/primary_caregiver"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0dp"
                            android:paddingTop="@dimen/register_list_top_bottom_min_padding"
                            android:text="@string/primary_care_giver"
                            android:textAllCaps="true"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/register_list_desc_size"
                            android:visibility="gone" />

                    </LinearLayout>
                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabIndicatorColor="#E2E363"
                app:tabIndicatorHeight="4dp"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#E2E363"
                app:tabTextAppearance="@style/CustomFontTextViewStyle.tabIndicator.sub.white" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/family_has_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_background_selctor"
            android:padding="20dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/family_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/childrow_family" />

            <ImageView
                android:id="@+id/family_arrow_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/row_goto" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/textview_family_has"
                style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/family_image"
                android:gravity="center_horizontal"
                android:text="@string/family_has_nothing_due"
                android:textColor="@android:color/black" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/text_view_family_profile"
                style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_family_has"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/family_image"
                android:text="@string/go_to_family_s_profile"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/last_visit_row"
        android:background="@color/light_grey"
        android:visibility="gone" />

    <include
        android:id="@+id/record_visit_panel" android:visibility="gone"
        layout="@layout/view_record_visit" />

    <include
        android:id="@+id/profile_layout" android:visibility="gone"
        layout="@layout/content_profile" />

        <include android:layout_width="match_parent"
            android:layout_height="match_parent" layout="@layout/content_base_profile"
            android:layout_below="@+id/collapsing_toolbar_appbarlayout"/>
    <ImageView
        android:id="@+id/home_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_button_bg"
        android:gravity="center|bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_home" />

</RelativeLayout>