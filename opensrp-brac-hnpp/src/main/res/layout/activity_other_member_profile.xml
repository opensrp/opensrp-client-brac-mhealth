<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/toolbar_appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/customAppThemeBlue">

            <android.support.v7.widget.Toolbar
                android:id="@+id/family_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetRight="0dp"
                android:theme="@style/FamilyTheme.DarkAppBarOverlay"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/toolbar_title"
                    style="@style/CustomFontTextViewStyle.ClientList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:text="@string/return_to_family_profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/register_member_title_size" />

            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:id="@+id/family_two_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetRight="0dp"
                android:theme="@style/FamilyTheme.AppBarOverlay"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/image_panel"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageview_profile"
                           android:layout_toRightOf="@+id/finger_print"
                            android:src="@drawable/rowavatar_member"
                            android:layout_width="@dimen/client_profile_pic_width"
                            android:layout_height="@dimen/client_profile_pic_height"
                            app:civ_border_color="#FFFFFFFF"
                            app:civ_border_width="0dp" />

                        <ImageView
                            android:id="@+id/finger_print"
                            android:visibility="gone"
                            android:src="@drawable/ic_finger"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/profile_name_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_panel"
                        android:orientation="vertical"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="1.5">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <org.smartregister.view.customcontrols.CustomFontTextView
                                android:id="@+id/textview_name"
                                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="0dp"
                                android:text="Charity Otala"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_title_size" />
                               </RelativeLayout>


                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/textview_detail_three"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingLeft="0dp"
                            android:paddingRight="5dp"
                            android:text="ID: 25398735"
                            android:textSize="@dimen/activity_title_size"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/white" />

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/textview_detail_one"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingLeft="0dp"
                            android:text="Male"
                            android:textSize="@dimen/px_16_to_sp"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/white" />
                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/textview_detail_two"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/text_view_first_dot"
                            android:layout_toLeftOf="@+id/text_view_second_dot"
                            android:layout_gravity="center"
                            android:textSize="@dimen/px_16_to_sp"
                            android:gravity="center"
                            android:ellipsize="end"
                            android:paddingLeft="0dp"
                            android:visibility="gone"
                            android:textColor="@color/text_black" />

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/family_head"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0dp"
                            android:paddingTop="@dimen/register_list_top_bottom_min_padding"
                            android:text="@string/family_head"
                            android:textAllCaps="true"
                            android:visibility="gone"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/register_list_desc_size" />

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/primary_caregiver"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0dp"
                            android:visibility="gone"
                            android:paddingTop="@dimen/register_list_top_bottom_min_padding"
                            android:text="@string/primary_care_giver"
                            android:textAllCaps="true"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/register_list_desc_size" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true">

                            <org.smartregister.view.customcontrols.CustomFontTextView
                                android:id="@+id/textview_age"
                                style="@style/CustomFontTextViewStyle.ClientList.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:gravity="center_horizontal"
                                android:paddingLeft="0dp"
                                android:text="Age"
                                android:textColor="@color/white"
                                android:textSize="@dimen/px_16_to_sp" />

                            <org.smartregister.view.customcontrols.CustomFontTextView
                                android:id="@+id/textview_edit_btn"
                                style="@style/CustomFontTextViewStyle.ClientList.Light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/textview_age"
                                android:drawableRight="@drawable/ic_edit_white"
                                android:drawablePadding="5dp"
                                android:gravity="center_horizontal"
                                android:paddingLeft="0dp"
                                android:text="Edit"
                                android:textColor="@color/white"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/edit_member_btn"
                        android:background="@color/others"
                        android:layout_toRightOf="@+id/profile_name_layout"
                        android:layout_alignBottom="@+id/profile_name_layout"
                        android:layout_marginLeft="@dimen/btn_margin_left"
                        android:drawableLeft="@drawable/ic_edit"
                        android:textSize="@dimen/btn_text_size"
                        android:text="Edit"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"/>



                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabIndicatorColor="#E2E363"
                app:tabIndicatorHeight="4dp"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#E2E363"
                app:tabTextAppearance="@style/CustomFontTextViewStyle.tabIndicator.sub.white" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/family_has_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_background_selctor"
            android:padding="20dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/family_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/childrow_family" />

            <ImageView
                android:id="@+id/family_arrow_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/row_goto" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/textview_family_has"
                style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/family_image"
                android:gravity="center_horizontal"
                android:text="@string/family_has_nothing_due"
                android:textColor="@android:color/black" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/text_view_family_profile"
                style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_family_has"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/family_image"
                android:text="@string/go_to_family_s_profile"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

        <include layout="@layout/content_base_profile" />

</android.support.design.widget.CoordinatorLayout>