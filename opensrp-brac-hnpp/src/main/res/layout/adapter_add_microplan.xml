<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/union_txt"
            android:text="Union"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="1dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/old_ward_txt"
            android:text="Old Ward"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="1dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/new_ward_txt"
            android:text="New Ward"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="1dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/block_txt"
            android:text="Block"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="1dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/weekly_txt"
            android:text="-"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="1dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/yearly_txt"
            android:text="-"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="1dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/monthly_txt"
            android:text="-"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="1dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:background="@drawable/edit_text_bg"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/status_txt"
                android:text="Pending"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/edit_text_bg"
            android:gravity="center"
            android:layout_marginLeft="-3dp"
            android:orientation="horizontal"
            android:maxWidth="200dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/add_img"
                android:src="@drawable/ic_input_add"
                android:background="@drawable/round_btn"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/view_img"
                android:layout_margin="5dp"
                android:src="@drawable/ic_eye"
                android:background="@drawable/round_btn"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/edit_img"
                android:src="@drawable/ic_edit"
                android:background="@drawable/round_btn"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/comment_img"
                android:src="@drawable/ic_comment_foreground"
                android:background="@drawable/round_btn"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>