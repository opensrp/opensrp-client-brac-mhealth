<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#54B858">

        <ImageView
            android:id="@+id/hh_profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/client_profile_pic_width"
            android:maxHeight="@dimen/client_profile_pic_height"
            android:paddingStart="@dimen/register_list_top_bottom_min_padding"
            android:paddingBottom="@dimen/register_list_top_bottom_min_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/rowavatar_member"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/patient_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/hh_profile_img"
            android:layout_toRightOf="@+id/hh_profile_img"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/due_button_wrapper"
            app:layout_constraintStart_toEndOf="@+id/hh_profile_img"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/risk_view"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/vaccine_red_bg_end"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/edd_view"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/purple"
                    android:visibility="gone" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/woman_name"
                    style="@style/CustomFontTextViewStyle.ClientList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:singleLine="true"
                    android:text="Patient Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/register_list_title_size"
                    android:textStyle="bold" />

            </LinearLayout>


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/phoneNumber"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:text="0178787878"
                android:textColor="@color/text_black"
                android:textSize="@dimen/register_list_desc_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/due_button_wrapper"
            android:layout_width="0dp"
            android:layout_height="@dimen/register_list_item_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingStart="@dimen/register_list_item_padding"
            android:paddingLeft="@dimen/register_list_item_padding"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:paddingEnd="@dimen/register_list_item_padding"
            android:paddingRight="@dimen/register_list_item_padding"
            android:paddingBottom="@dimen/register_list_top_bottom_padding"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/due_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/purple_background"
                android:elevation="@dimen/register_list_elevation"
                android:gravity="center"
                android:hapticFeedbackEnabled="true"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:stateListAnimator="@drawable/button"
                android:text="24-10-2023"
                android:textAllCaps="false"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="@dimen/register_list_due_size"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/due_lay_telephonic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/purple_background"
                android:elevation="@dimen/register_list_elevation"
                android:gravity="center"
                android:hapticFeedbackEnabled="true"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:stateListAnimator="@drawable/button"
                android:typeface="normal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/yellow"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/floating_call"
                            android:tint="@color/green_overlay"
                            />
                        <TextView
                            android:id="@+id/phone_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="011111111"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/due_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due: 26/12/2023"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>