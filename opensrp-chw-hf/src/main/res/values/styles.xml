<resources>
    <!-- Base application theme. -->
    <style name="HFTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hf_primary</item>
        <item name="colorPrimaryDark">@color/hf_primary_dark</item>
        <item name="colorAccent">@color/hf_accent</item>
    </style>

    <style name="HFTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HFTheme.Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textSize">@dimen/login_font_size</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

</resources>
